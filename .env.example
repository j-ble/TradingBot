# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_user
DB_PASSWORD=your_secure_password_here

# Coinbase Advanced Trade API (Ed25519 JWT Auth)
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_base64_encoded_ed25519_private_key_here

# Trading Configuration
PAPER_TRADING_MODE=true
ACCOUNT_BALANCE=100
LEVERAGE=2
RISK_PER_TRADE=0.01
